<detail id="{detail_id}">
  <title>
    <text>
      <locale id="{title_text_id}"/>
    </text>
  </title>

  <field>
    <style horz-align="left" vert-align="center" font-size="medium">
      <grid grid-height="1" grid-width="12" grid-x="0" grid-y="0"/>
    </style>
    <header>
      <text>
        <locale id="{top_left[locale_id]}"/>
      </text>
    </header>
    <template form="{top_left[format]}">
      <text>
        <xpath function="{top_left[xpath_function]}">
          {top_left[variables]}
        </xpath>
      </text>
    </template>
  </field>

  <field>
    <style horz-align="left" vert-align="center" font-size="medium">
      <grid grid-height="1" grid-width="6" grid-x="6" grid-y="0"/>
    </style>
    <header>
      <text>
      </text>
    </header>
    <template form="address" width="0">
      <text>
        <xpath function="{map[xpath_function]}">
          {map[variables]}
        </xpath>
      </text>
    </template>
  </field>

  <field>
    <style horz-align="left" vert-align="center" font-size="medium">
      <grid grid-height="1" grid-width="7" grid-x="0" grid-y="1"/>
    </style>
    <header>
      <text>
        <locale id="{upper_left[locale_id]}"/>
      </text>
    </header>
    <template form="{upper_left[format]}">
      <text>
        <xpath function="{upper_left[xpath_function]}">
          {upper_left[variables]}
        </xpath>
      </text>
    </template>
  </field>

  <field>
    <style horz-align="left" vert-align="center" font-size="medium">
      <grid grid-height="1" grid-width="4" grid-x="8" grid-y="1"/>
    </style>
    <header>
      <text>
        <locale id="{right[locale_id]}"/>
      </text>
    </header>
    <template form="{right[format]}">
      <text>
        <xpath function="{right[xpath_function]}">
          {right[variables]}
        </xpath>
      </text>
    </template>
  </field>


  <field>
    <style horz-align="left" vert-align="center" font-size="medium">
      <grid grid-height="1" grid-width="12" grid-x="0" grid-y="2"/>
    </style>
    <header>
      <text>
        <locale id="{lower_left[locale_id]}"/>
      </text>
    </header>
    <template form="{lower_left[format]}">
      <text>
        <xpath function="{lower_left[xpath_function]}">
          {lower_left[variables]}
        </xpath>
      </text>
    </template>
  </field>

  <field>
    <style horz-align="center" vert-align="center" font-size="medium">
      <grid grid-height="1" grid-width="12" grid-x="0" grid-y="3"/>
    </style>
    <header>
      <text>
        <locale id="{bottom_center[locale_id]}"/>
      </text>
    </header>
    <template form="{bottom_center[format]}">
      <text>
        <xpath function="{bottom_center[xpath_function]}">
          {bottom_center[variables]}
        </xpath>
      </text>
    </template>
  </field>

</detail>
